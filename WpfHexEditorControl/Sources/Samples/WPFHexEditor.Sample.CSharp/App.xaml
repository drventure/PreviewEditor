<Application
    x:Class="WPFHexaEditorExample.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:conv="clr-namespace:WpfHexaEditor.Core.Converters;assembly=WPFHexaEditor"
    DispatcherUnhandledException="Application_DispatcherUnhandledException"
    StartupUri="MainWindow.xaml">

    <Application.Resources>
        <conv:PathToFilenameConverter x:Key="FilenameConverter" />
        <conv:VisibilityToBooleanConverter x:Key="VisibilityToBoolConverter" />
    </Application.Resources>
</Application>